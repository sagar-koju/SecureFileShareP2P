<!-- FILE: Views/MainWindow.xaml -->

<Window x:Class="SecureFileShareP2P.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecureFileShareP2P"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">

    <Grid Margin="10" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"/>
            <ColumnDefinition Width="2*" MinWidth="350"/>
        </Grid.ColumnDefinitions>

        <!-- Column 0: Actions -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
            <!-- Receiver Settings -->
            <GroupBox Header="Receiver Settings" Margin="0,0,0,10" Padding="10">
                <StackPanel>
                    <TextBlock Text="My Listening Port:" Margin="0,0,0,5"/>
                    <TextBox x:Name="ReceiverPortBox" Text="12345" Margin="0,0,0,5"/>
                    <Button x:Name="StartReceiverButton" Content="Start Listening" Click="StartReceiver_Click" Margin="0,5,0,0"/>
                    <Button x:Name="StartBroadcastButton" Content="Broadcast My Presence" Click="StartBroadcast_Click" Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Sender Settings -->
            <GroupBox Header="Send File" Padding="10">
                <StackPanel>
                    <Button Content="Select File to Send" Click="SelectFile_Click"/>
                    <TextBlock x:Name="SelectedFileText" Margin="0,5" Text="No file selected." TextWrapping="Wrap" MinHeight="40"/>
                    <TextBlock Text="Selected Peer's IP:" Margin="0,10,0,0"/>
                    <TextBox x:Name="ReceiverIPBox" Text="Select a peer" IsReadOnly="True" Background="#EEE" Margin="0,0,0,5"/>
                    <Button Content="Send File to Selected Peer" Click="SendFile_Click" Margin="0,10,0,0"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Incoming Requests" Margin="0,10,0,0" Padding="10" Grid.Row="1">
                <ListBox x:Name="RequestsList" MinHeight="100" MaxHeight="200" ItemsSource="{Binding IncomingRequests}">
                    <ListBox.ItemTemplate>
                        <!-- === THIS IS THE MODIFIED SECTION === -->
                        <DataTemplate>
                            <Grid Margin="2, 4">
                                <!-- Grid now has two rows defined -->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <!-- For the message text -->
                                    <RowDefinition Height="Auto" />
                                    <!-- For the buttons -->
                                </Grid.RowDefinitions>

                                <!-- Message TextBlock is in the first row -->
                                <TextBlock Grid.Row="0" Text="{Binding Message}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="0,0,0,8" />

                                <!-- A StackPanel holds the buttons in the second row, aligned to the right -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Accept" Click="AcceptRequest_Click" CommandParameter="{Binding}" Margin="0,0,5,0" Padding="15,2"/>
                                    <Button Content="Reject" Click="RejectRequest_Click" CommandParameter="{Binding}" Padding="15,2"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                        <!-- === END OF MODIFIED SECTION === -->
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>
        </StackPanel>

        <!-- Column 1: Peer Discovery -->
        <GroupBox Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Header="Peer Discovery" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Content="Start/Restart Peer Scan" Click="ScanPeers_Click" Margin="0,0,0,10"/>

                <ListBox x:Name="PeerList" Grid.Row="1" SelectionChanged="PeerList_SelectionChanged" BorderThickness="1" BorderBrush="#CCC">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="5">
                                    <TextBlock Text="{Binding Username}" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock>
                                        <Run Text="IP:" Foreground="DarkSlateGray"/>
                                        <Run Text="{Binding IP}" Foreground="DarkSlateGray"/>
                                    </TextBlock>
                                </StackPanel>

                                <Button Grid.Column="1" 
                                        Content="Start Chat" 
                                        x:Name="StartChatButton"
                                        Click="StartChat_Click" 
                                        CommandParameter="{Binding}"
                                        VerticalAlignment="Center"
                                        Margin="10,0,0,0" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button x:Name="ViewHistoryButton" Content="View History" Click="ViewHistoryButton_Click" Margin="0,0,10,0" Padding="10,2"/>
                    <Button x:Name="LogoutButton" Content="Logout" Click="LogoutButton_Click" Padding="10,2" Background="CornflowerBlue" Foreground="White"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Bottom Rows: Progress & Status -->
        <ProgressBar Grid.Row="2" Grid.ColumnSpan="2" x:Name="TransferProgress" Height="15" Margin="0,10,0,5"/>
        <TextBlock Grid.Row="3" Grid.ColumnSpan="2" x:Name="StatusText" Text="Ready." TextAlignment="Center" FontWeight="Bold"/>

        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="CancelTransferButton" Content="Cancel Transfer" Click="CancelTransfer_Click" Padding="10,2" 
                    Visibility="Collapsed" Background="IndianRed" Foreground="White"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ResetUIButton" Content="Reset" Click="ResetUI_Click" Margin="0,0,10,0" Padding="10,2"/>
            <Button x:Name="QuitButton" Content="Quit Application" Click="QuitButton_Click" Padding="10,2"/>
        </StackPanel>
    </Grid>
</Window>