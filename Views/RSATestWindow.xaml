<Window x:Class="SecureFileShareP2P.Views.RSATestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RSA Test" Height="300" Width="400">
    <StackPanel VerticalAlignment="Center" Margin="20">
        <Button x:Name="GenerateKeysButton" Content="1. Generate RSA Keys" Margin="0 0 0 10" Click="GenerateKeysButton_Click"/>
        <TextBox x:Name="InputTextBox" Text="Hello, RSA!" Margin="0 0 0 10"/>
        <Button x:Name="EncryptButton" Content="2. Encrypt" Margin="0 0 0 10" Click="EncryptButton_Click"/>
        <Button x:Name="DecryptButton" Content="3. Decrypt" Margin="0 0 0 10" Click="DecryptButton_Click"/>
        <TextBlock x:Name="ResultText" TextWrapping="Wrap"/>
    </StackPanel>
</Window>