<!-- FILE: Views/FileLogWindow.xaml -->

<Window x:Class="SecureFileShareP2P.Views.FileLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecureFileShareP2P.Views"
        mc:Ignorable="d"
        Title="File Transfer History" Height="450" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- DataGrid to display the logs -->
        <DataGrid Grid.Row="0" x:Name="FileLogGrid" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  ItemsSource="{Binding FileLogs}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*"/>
                <!-- Format FileSize with thousands separator -->
                <DataGridTextColumn Header="Size (Bytes)" Binding="{Binding FileSize, StringFormat={}{0:N0}}" Width="100"/>
                <DataGridTextColumn Header="From" Binding="{Binding SenderUsername}" Width="100"/>
                <DataGridTextColumn Header="To" Binding="{Binding ReceiverUsername}" Width="100"/>
                <!-- Format Timestamp for readability -->
                <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss'}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons at the bottom -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="RefreshButton" Content="Refresh" Width="80" Click="RefreshButton_Click"/>
            <Button x:Name="CloseButton" Content="Close" Width="80" Margin="10,0,0,0" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>